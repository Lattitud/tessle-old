<%= simple_form_for PrivateMessage.new, remote: true, html: {id: "new_private_message#{recipient_id}"} do |f| %>
  <%= f.text_area :content, id: "private_message_content#{recipient_id}", class: "message_content", placeholder: "Press Enter to send" %>
  <%= f.hidden_field :recipient_id, value: recipient_id %>
  <%= f.submit "", id: "private_send_button#{recipient_id}", class: "send_button" %>
<% end %>