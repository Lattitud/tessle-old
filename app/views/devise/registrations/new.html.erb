<% provide(:title, 'Join') %>

<div class="main-login">
  <section class="social-login">
    <div class="row-fluid">
      <div class="col-sm-5 offset-4 absolute-center" style="height: 642px;">
        <h1 class="login-tessle">tessle</h1>
        <div class="login-description">begin an adventure</div>
        <div class="login-div">
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.input :user_name, :required => true, error: false, placeholder: "Username", autofocus: true %>
          <%= f.input :email, :required => true, placeholder: "Password", error: false %>

          <% if f.object.provider.blank? %>
          <%= f.input :password, :required => true, error: false, placeholder: "Password", input_html: {id: "user_signup_password"} %>
          <%= f.input :password_confirmation, :required => true, placeholder: "Confirm Password", error: false %>
          <% end %>

          <%= f.button :submit, "Join", id: "signup_button" %>
          <% end %>

          <div class="login-with">Or sign up with:</div>
            <ul class="social-login-list">
              <li class="social-login-list-item">
                <%= link_to "twitter", user_omniauth_authorize_path(:twitter) %>
              </li>
              <li class="social-login-list-item">
                <%= link_to "facebook", user_omniauth_authorize_path(:facebook) %>
              </li>
              <li class="social-login-list-item">
                <%= link_to "google", user_omniauth_authorize_path(:google_oauth2) %>
              </li>
            </ul>
            <div class="login-bottom-padding"></div>
          </div>
        </div>
      </div>
    </div> <!-- end row -->
  </section>
</div>